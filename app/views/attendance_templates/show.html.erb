<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Attendance #<%= @attendance.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/attendances" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_member == @attendance.member %>
          <a href="/attendances/<%= @attendance.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit attendance
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_member == @attendance.member %>
          <a href="/delete_attendance/<%= @attendance.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete attendance
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        Member
      </dt>
      <dd>
        <% if @attendance.member.present? %>
          <a href="/members/<%= @attendance.member_id %>">
            <%= @attendance.member.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Event
      </dt>
      <dd>
        <% if @attendance.event.present? %>
          <a href="/events/<%= @attendance.event_id %>">
            <%= @attendance.event.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@attendance.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@attendance.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

