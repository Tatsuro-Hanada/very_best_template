<h1>
  Add a new attendance
</h1>


<hr>

<!-- Form attendance start -->
<form action="/create_attendance" method="post">
<!-- Form attendance end -->

  <!-- Label and input for member_id start -->
  <!-- Input for "member_id" start -->
  <input type="hidden" name="member_id" value="<%= current_member.id %>">
  <!-- Input for "member_id" end -->
  <!-- Label and input for member_id end -->

  <!-- Label and input for event_id start -->
  <div class="form-group">
    <label for="event_id">
      Event
    </label>

    <!-- Input for event_id start -->
    <%= select_tag(:event_id, options_from_collection_for_select(Event.all, :id, :name, @attendance.event_id), :class => "form-control") %>
    <!-- Input for event_id end -->
  </div>
  <!-- Label and input for event_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create attendance
  </button>
</form>

<hr>

<a href="/attendances">
  Go back
</a>
