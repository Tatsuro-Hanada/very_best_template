<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All attendances
    </h1>

    <a href="/attendances/new" class="btn btn-block btn-outline-secondary">
      Add a new attendance
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "attendance_templates/attendances_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Member
        </th>

        <th>
          Event
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @attendances.each do |attendance| %>
      <tr>
        <td>
          <%= attendance.id %>
        </td>

        <td>
          <% if attendance.member.present? %>
            <a href="/members/<%= attendance.member.id %>">
              <%= attendance.member.email %>
            </a>
          <% end %>
        </td>

        <td>
          <% if attendance.event.present? %>
            <a href="/events/<%= attendance.event.id %>">
              <%= attendance.event.name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(attendance.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(attendance.updated_at) %> ago
        </td>

        <td>
          <a href="/attendances/<%= attendance.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @attendances, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
