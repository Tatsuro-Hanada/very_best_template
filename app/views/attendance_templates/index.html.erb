<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All attendances
    </h1>

    <a href="/attendances/new" class="btn btn-block btn-outline-secondary">
      Add a new attendance
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Member
        </th>

        <th>
          Event
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @attendances.each do |attendance| %>
      <tr>
        <!-- Display attendance.id start -->
        <td>
          <%= attendance.id %>
        </td>
        <!-- Display attendance.id end -->

        <!-- Display attendance.member_id start -->
        <td>
          <%= attendance.member.email %>
        </td>
        <!-- Display attendance.member_id end -->

        <!-- Display attendance.event_id start -->
        <td>
          <%= attendance.event_id %>
        </td>
        <!-- Display attendance.event_id end -->

        <!-- Display attendance.created_at start -->
        <td>
          <%= time_ago_in_words(attendance.created_at) %> ago
        </td>
        <!-- Display attendance.created_at end -->

        <!-- Display attendance.updated_at start -->
        <td>
          <%= time_ago_in_words(attendance.updated_at) %> ago
        </td>
        <!-- Display attendance.updated_at end -->

        <td>
          <a href="/attendances/<%= attendance.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
