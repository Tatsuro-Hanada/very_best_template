<h1>
  Edit attendance #<%= @attendance.id %>
</h1>

<hr>

<!-- Form attendance start -->
<form action="/update_attendance/<%= @attendance.id %>" method="post">
<!-- Form attendance end -->

  <!-- Label and input for member_id start -->
  <div class="form-group">
    <label for="member_id">
      Member
    </label>

    <!-- Input for member_id start -->
    <input type="text" id="member_id" name="member_id" class="form-control" value="<%= @attendance.member_id %>">
    <!-- Input for member_id end -->
  </div>
  <!-- Label and input for member_id end -->

  <!-- Label and input for event_id start -->
  <div class="form-group">
    <label for="event_id">
      Event
    </label>

    <!-- Input for event_id start -->
    <input type="text" id="event_id" name="event_id" class="form-control" value="<%= @attendance.event_id %>">
    <!-- Input for event_id end -->
  </div>
  <!-- Label and input for event_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Update attendance
  </button>
</form>

<hr>

<a href="/attendances">
  Go back
</a>
