<!-- Validation failure messages -->
<% if @interest.errors.any? %>
  <% @interest.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit interest #<%= @interest.id %>
</h1>

<hr>

<!-- Form interest start -->
<form action="/update_interest/<%= @interest.id %>" method="post">
<!-- Form interest end -->

  <!-- Label and input for member_id start -->
  <div class="form-group">
    <label for="member_id">
      Member
    </label>

    <!-- Input for member_id start -->
    <input type="text" id="member_id" name="member_id" class="form-control" value="<%= @interest.member_id %>">
    <!-- Input for member_id end -->
  </div>
  <!-- Label and input for member_id end -->

  <!-- Label and input for event_id start -->
  <div class="form-group">
    <label for="event_id">
      Event
    </label>

    <!-- Input for event_id start -->
    <input type="text" id="event_id" name="event_id" class="form-control" value="<%= @interest.event_id %>">
    <!-- Input for event_id end -->
  </div>
  <!-- Label and input for event_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Update interest
  </button>
</form>

<hr>

<a href="/interests">
  Go back
</a>
