<% if @interest.errors.any? %>
  <% @interest.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit interest #<%= @interest.id %>
</h1>

<hr>

<form action="/update_interest/<%= @interest.id %>" method="post">


  <div class="form-group">
    <label for="event_id">
      Event
    </label>

    <%= select_tag(:event_id, options_from_collection_for_select(Event.all, :id, :name, @interest.event_id), :class => "form-control") %>
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update interest
  </button>
</form>

<hr>

<a href="/interests">
  Go back
</a>
