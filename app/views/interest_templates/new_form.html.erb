<h1>
  Add a new interest
</h1>


<hr>

<!-- Form interest start -->
<form action="/create_interest" method="post">
<!-- Form interest end -->

  <!-- Label and input for member_id start -->
  <!-- Input for "member_id" start -->
  <input type="hidden" name="member_id" value="<%= current_member.id %>">
  <!-- Input for "member_id" end -->
  <!-- Label and input for member_id end -->

  <!-- Label and input for event_id start -->
  <div class="form-group">
    <label for="event_id">
      Event
    </label>

    <!-- Input for event_id start -->
    <%= select_tag(:event_id, options_from_collection_for_select(Event.all, :id, :name, @interest.event_id), :class => "form-control") %>
    <!-- Input for event_id end -->
  </div>
  <!-- Label and input for event_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create interest
  </button>
</form>

<hr>

<a href="/interests">
  Go back
</a>
