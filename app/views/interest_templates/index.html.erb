<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All interests
    </h1>

    <a href="/interests/new" class="btn btn-block btn-outline-secondary">
      Add a new interest
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Member
        </th>

        <th>
          Event
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @interests.each do |interest| %>
      <tr>
        <!-- Display interest.id start -->
        <td>
          <%= interest.id %>
        </td>
        <!-- Display interest.id end -->

        <!-- Display interest.member_id start -->
        <td>
          <% if interest.user.present? %>
            <a href="/members/<%= interest.user.id %>">
              <%= interest.user.email %>
            </a>
          <% end %>
        </td>
        <!-- Display interest.member_id end -->

        <!-- Display interest.event_id start -->
        <td>
          <% if interest.event.present? %>
            <a href="/events/<%= interest.event.id %>">
              <%= interest.event.name %>
            </a>
          <% end %>
        </td>
        <!-- Display interest.event_id end -->

        <!-- Display interest.created_at start -->
        <td>
          <%= time_ago_in_words(interest.created_at) %> ago
        </td>
        <!-- Display interest.created_at end -->

        <!-- Display interest.updated_at start -->
        <td>
          <%= time_ago_in_words(interest.updated_at) %> ago
        </td>
        <!-- Display interest.updated_at end -->

        <td>
          <a href="/interests/<%= interest.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @interests, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
