<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All interests
    </h1>

    <a href="/interests/new" class="btn btn-block btn-outline-secondary">
      Add a new interest
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "interest_templates/interests_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Member
        </th>

        <th>
          Event
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @interests.each do |interest| %>
      <tr>
        <td>
          <%= interest.id %>
        </td>

        <td>
          <% if interest.user.present? %>
            <a href="/members/<%= interest.user.id %>">
              <%= interest.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <% if interest.event.present? %>
            <a href="/events/<%= interest.event.id %>">
              <%= interest.event.name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(interest.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(interest.updated_at) %> ago
        </td>

        <td>
          <a href="/interests/<%= interest.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @interests, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
