<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Review #<%= @review.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/reviews" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_member == @review.member %>
          <a href="/reviews/<%= @review.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit review
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_member == @review.member %>
          <a href="/delete_review/<%= @review.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete review
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        Body
      </dt>
      <dd>
        <%= @review.body %>
      </dd>

      <dt>
        Member
      </dt>
      <dd>
        <% if @review.member.present? %>
          <a href="/members/<%= @review.member_id %>">
            <%= @review.member.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Event
      </dt>
      <dd>
        <% if @review.event.present? %>
          <a href="/events/<%= @review.event_id %>">
            <%= @review.event.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Rating
      </dt>
      <dd>
        <%= @review.rating %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@review.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@review.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

