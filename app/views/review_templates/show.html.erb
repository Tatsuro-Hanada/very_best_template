<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Review #<%= @review.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/reviews" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link review start -->
      <div class="col">
        <a href="/reviews/<%= @review.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit review
        </a>
      </div>
      <!-- Edit link review end -->

      <!-- Delete link review start -->
      <div class="col">
        <a href="/delete_review/<%= @review.id %>" class="btn btn-block btn-outline-secondary">
          Delete review
        </a>
      </div>
      <!-- Delete link review end -->
    </div>

    <dl>
      <dt>
        Body
      </dt>
      <!-- Display body start -->
      <dd>
        <%= @review.body %>
      </dd>
      <!-- Display body end -->

      <dt>
        Member
      </dt>
      <!-- Display member_id start -->
      <dd>
        <%= @review.member_id %>
      </dd>
      <!-- Display member_id end -->

      <dt>
        Event
      </dt>
      <!-- Display event_id start -->
      <dd>
        <%= @review.event_id %>
      </dd>
      <!-- Display event_id end -->

      <dt>
        Rating
      </dt>
      <!-- Display rating start -->
      <dd>
        <%= @review.rating %>
      </dd>
      <!-- Display rating end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@review.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@review.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<!-- Show Page Customization end -->
