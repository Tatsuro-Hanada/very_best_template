<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All genres
    </h1>

    <a href="/genres/new" class="btn btn-block btn-outline-secondary">
      Add a new genre
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "genre_templates/genres_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @genres.each do |genre| %>
      <tr>
        <td>
          <%= genre.id %>
        </td>

        <td>
          <%= genre.name %>
        </td>

        <td>
          <%= time_ago_in_words(genre.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(genre.updated_at) %> ago
        </td>

        <td>
          <a href="/genres/<%= genre.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @genres, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
