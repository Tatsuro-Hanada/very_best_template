<!-- Validation failure messages -->
<% if @genre.present? %>
  <% if @genre.errors.any? %>
    <% @genre.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new genre
</h1>


<hr>

<!-- Form genre start -->
<form action="/create_genre" method="post">
<!-- Form genre end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control" value="<%= @genre.name %>">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <button class="btn btn-block btn-outline-secondary">
    Create genre
  </button>
</form>

<hr>

<a href="/genres">
  Go back
</a>
