<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Events

    <a data-toggle="collapse" href="#genre_events_new_form">
      Add event
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @genre.events.each do |event| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <a href="/events/<%= event.id %>">
          <%= event.name %>
        </a>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%if current_member == event.user %>
          <a href="/delete_event_from_genre/<%= event.id %>">
            Delete
          </a>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="genre_events_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "genre_templates/genre_events_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
