<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Genre #<%= @genre.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/genres" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/genres/<%= @genre.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit genre
        </a>
      </div>

      <div class="col">
        <a href="/delete_genre/<%= @genre.id %>" class="btn btn-block btn-outline-secondary">
          Delete genre
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @genre.name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@genre.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@genre.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "genre_templates/genre_events" %>
  </div>
</div>
