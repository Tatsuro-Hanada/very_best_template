<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All members
    </h1>

    <a href="/members/new" class="btn btn-block btn-outline-secondary">
      Add a new member
    </a>
  </div>
</div>





<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Email
        </th>

        <th>
          Password
        </th>

        <th>
          Username
        </th>

        <th>
          Cochair flag
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @members.each do |member| %>
      <tr>
        <td>
          <%= member.id %>
        </td>

        <td>
          <%= member.email %>
        </td>

        <td>
          <%= member.password %>
        </td>

        <td>
          <%= member.username %>
        </td>

        <td>
          <%= member.cochair_flag %>
        </td>

        <td>
          <%= time_ago_in_words(member.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(member.updated_at) %> ago
        </td>

        <td>
          <a href="/members/<%= member.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @members, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
