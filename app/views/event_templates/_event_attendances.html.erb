<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Attendances

    <a data-toggle="collapse" href="#event_attendances_new_form">
      Add attendance
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @event.attendances.each do |attendance| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <a href="/attendances/<%= attendance.id %>">
          <%= attendance.member_id %>
        </a>
        <!-- Show link end -->

        <!-- Delete link start -->
        <a href="/delete_attendance_from_event/<%= attendance.id %>">
          Delete
        </a>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="event_attendances_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "event_templates/event_attendances_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
