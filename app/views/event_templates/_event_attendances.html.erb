<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Attendances

    <a data-toggle="collapse" href="#event_attendances_new_form">
      Add attendance
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @event.attendances.each do |attendance| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/attendances/<%= attendance.id %>">
          <%= attendance.member_id %>
        </a>

        <%if current_member == attendance.member %>
          <a href="/delete_attendance_from_event/<%= attendance.id %>">
            Delete
          </a>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="event_attendances_new_form">
        <%= render partial: "event_templates/event_attendances_new_form" %>
      </div>
    </div>

  </ul>
</div>
