<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Event #<%= @event.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/events" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_member == @event.user %>
          <a href="/events/<%= @event.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit event
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_member == @event.user %>
          <a href="/delete_event/<%= @event.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete event
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @event.name %>
      </dd>

      <dt>
        Date
      </dt>
      <dd>
        <%= @event.date %>
      </dd>

      <dt>
        Venue
      </dt>
      <dd>
        <%= @event.venue %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @event.description %>
      </dd>

      <dt>
        Member
      </dt>
      <dd>
        <% if @event.user.present? %>
          <a href="/members/<%= @event.member_id %>">
            <%= @event.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Genre
      </dt>
      <dd>
        <% if @event.genre.present? %>
          <a href="/genres/<%= @event.genre_id %>">
            <%= @event.genre.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@event.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@event.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

