<form action="/create_review_from_event" method="post">

  <div class="form-group">
    <label for="body">
      Body
    </label>

    <input type="text" id="body" name="body" class="form-control" value="<%= @review.body %>">
  </div>

  <input type="hidden" name="member_id" value="<%= current_member.id %>">

  <input type="hidden" name="event_id" value="<%= @event.id %>">

  <div class="form-group">
    <label for="rating">
      Rating
    </label>

    <input type="text" id="rating" name="rating" class="form-control" value="<%= @review.rating %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create review
  </button>
</form>
