<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Interests

    <a data-toggle="collapse" href="#event_interests_new_form">
      Add interest
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @event.interests.each do |interest| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <a href="/interests/<%= interest.id %>">
          <%= interest.member_id %>
        </a>
        <!-- Show link end -->

        <!-- Delete link start -->
        <a href="/delete_interest_from_event/<%= interest.id %>">
          Delete
        </a>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="event_interests_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "event_templates/event_interests_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
